{
  "name": "vi-discord-bot",
  "version": "1.0.0",
  "description": "AI-first Discord bot with voice and GPT integration",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:unit": "vitest run apps/brain/tests/unit/*.test.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:cov": "vitest run --coverage",
    "start": "node -r module-alias/register dist/index.js",
    "dev": "tsx -r tsconfig-paths/register src/index.ts",
    "deploy:commands:global": "tsx scripts/deploy-commands.ts",
    "deploy:commands:guild": "set COMMAND_SCOPE=guild && tsx scripts/deploy-commands.ts",
    "deploy:commands:core": "set COMMAND_SUBSET=core && tsx scripts/deploy-commands.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "post:oc-howto": "tsx scripts/postOcHowTo.ts",
    "studio": "prisma studio",
    "levels:recalc": "tsx scripts/recalcLevels.ts",
    "infra:up": "cd infra && docker compose up -d",
    "infra:down": "cd infra && docker compose down",
    "infra:logs": "cd infra && docker compose logs -f",
    "infra:health": "powershell -ExecutionPolicy Bypass -File scripts/infra/health.ps1",
    "perf:memory": "tsx scripts/perf/memoryLoadTest.ts",
    "replay": "tsx scripts/replay/runReplay.ts",
    "test:replay": "tsx scripts/replay/runReplay.ts --assert",
    "test:crucible": "tsx scripts/replay/runCrucible.ts",
    "memory:dev": "cd apps/memory && pnpm run dev",
    "memory:seed": "cd apps/memory && pnpm run seed",
    "watchdog": "tsx scripts/watchdog.ts"
  },
  "dependencies": {
    "@discordjs/core": "^2.4.0",
    "@discordjs/opus": "0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@prisma/client": "^6.18.0",
    "@snazzah/davey": "^0.1.7",
    "bad-words": "^4.0.0",
    "cors": "^2.8.5",
    "discord.js": "^14.24.2",
    "express-rate-limit": "^8.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "lavalink-client": "^2.6.1",
    "module-alias": "^2.2.3",
    "nats": "^2.29.3",
    "node-cron": "^4.2.1",
    "opusscript": "0.0.8",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "play-dl": "^1.9.7",
    "prism-media": "^1.3.5",
    "prom-client": "^15.1.3",
    "spotify-web-api-node": "^5.0.2",
    "wink-sentiment": "^5.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^8.57.1",
    "@google-cloud/speech": "^7.2.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "@types/spotify-api": "^0.0.25",
    "@types/spotify-web-api-node": "^5.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "4.0.6",
    "@vitest/ui": "^4.0.6",
    "c8": "^10.1.3",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^17.0.1",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.12",
    "eslint": "^8.57.1",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "knip": "^5.63.1",
    "openai": "^6.7.0",
    "prisma": "^6.18.0",
    "ts-prune": "^0.10.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.6.0"
  }
}
