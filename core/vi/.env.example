# Environment Variables

# Node environment (development | test | production)
NODE_ENV=development

# Server
VI_HOST=0.0.0.0
VI_PORT=3000

# Logging
VI_LOG_LEVEL=info

# OpenAI/LLM
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4-turbo

# Rate limiting
VI_TOOLS_RATE_LIMIT_DEFAULT=5

# Database (SQLite for now)
DATABASE_URL=file:./vi.db

# Telemetry
VI_TELEMETRY_ENABLED=true
VI_TELEMETRY_PATH=./telemetry

# Feature flags
VI_DEBUG_MODE=false
ADMIN_DASH_ENABLED=false
