generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model XpProfile {
  userId     String
  guildId    String
  level      Int       @default(0)
  xp         Int       @default(0)
  voiceMs    Int       @default(0)
  lastMsgAt  DateTime?
  lastWeekly DateTime?
  lastDaily  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@id([userId, guildId])
  @@index([guildId, xp])
  @@index([guildId, level])
}

model XpEvent {
  id      String @id @default(cuid())
  userId  String
  guildId String
  source  String
  delta   Int

  requestId String? @unique
  messageId String? @unique
  voiceKey  String? @unique

  meta      Json?
  createdAt DateTime @default(now())

  @@index([guildId, userId, createdAt])
}

model LevelRole {
  id        String   @id @default(cuid())
  guildId   String
  level     Int
  roleId    String
  createdAt DateTime @default(now())

  @@unique([guildId, level])
}

model EcoAccount {
  userId       String
  guildId      String
  balance      BigInt    @default(0)
  prestige     Int       @default(0)
  lastDailyAt  DateTime?
  lastWeeklyAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@id([userId, guildId])
  @@index([guildId, balance])
}

model EcoTx {
  id        String   @id @default(cuid())
  userId    String
  guildId   String
  type      String
  amount    BigInt
  meta      Json?
  createdAt DateTime @default(now())

  @@index([guildId, userId, createdAt])
}

model EcoItem {
  id        String   @id @default(cuid())
  guildId   String
  sku       String
  name      String
  price     BigInt
  kind      String
  data      Json?
  stock     Int?
  createdAt DateTime @default(now())

  @@unique([guildId, sku])
}

model EcoInventory {
  id        String   @id @default(cuid())
  userId    String
  guildId   String
  sku       String
  qty       Int      @default(1)
  data      Json?
  createdAt DateTime @default(now())

  @@unique([userId, guildId, sku])
  @@index([guildId, userId])
}

//
// ─── Poll System Models ─────────────────────────────────────────────
//

model PollArchive {
  id        String   @id @default(cuid())
  guildId   String
  channelId String
  messageId String   @unique
  creatorId String
  createdAt DateTime
  closedAt  DateTime
  config    Json     // BuiltPoll
  votes     Json     // VoteSnapshot

  @@index([guildId, createdAt])
}

model PollPreset {
  id        String   @id @default(cuid())
  guildId   String
  name      String
  question  String
  answers   Json
  defaults  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@unique([guildId, name])
}

model PollWeight {
  id      String @id @default(cuid())
  guildId String
  roleId  String
  role    String
  weight  Float

  @@unique([guildId, roleId])
}

model PollVoterStats {
  id             String   @id @default(cuid())
  guildId        String
  userId         String
  totalVotes     Int      @default(0)
  currentStreak  Int      @default(0)
  longestStreak  Int      @default(0)
  lastVoteAt     DateTime?
  points         Int      @default(0)
  badges         Json     @default("[]") // Array of badge IDs
  
  @@unique([guildId, userId])
  @@index([guildId, points])
}

model Capability {
  id        String   @id @default(cuid())
  area      String
  title     String
  details   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([area])
}

model Consent {
  userId    String   @id
  consented Boolean  @default(false)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Diagnostic {
  key       String   @id
  value     Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
